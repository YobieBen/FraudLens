# FraudLens Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================
# APPLICATION SETTINGS
# ============================================
FRAUDLENS_ENV=development
FRAUDLENS_DEBUG=true
FRAUDLENS_LOG_LEVEL=INFO
FRAUDLENS_MAX_MEMORY_GB=8
VERSION=1.0.0

# ============================================
# SECURITY SETTINGS
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# DATABASE SETTINGS
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fraudlens
POSTGRES_USER=fraudlens
POSTGRES_PASSWORD=fraudlens_secure_password
DATABASE_URL=postgresql://fraudlens:fraudlens_secure_password@localhost:5432/fraudlens

# ============================================
# REDIS SETTINGS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=fraudlens_redis_password
REDIS_URL=redis://:fraudlens_redis_password@localhost:6379/1

# ============================================
# API SETTINGS
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RATE_LIMIT=1000
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]
MAX_UPLOAD_SIZE_MB=100

# ============================================
# WORKER SETTINGS
# ============================================
WORKER_CONCURRENCY=4
WORKER_MAX_TASKS_PER_CHILD=100
WORKER_REPLICAS=2

# ============================================
# MODEL SETTINGS
# ============================================
MODEL_PATH=/app/models
USE_GPU=false
MODEL_CACHE_SIZE_GB=2

# ============================================
# EXTERNAL API KEYS (Optional)
# ============================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# ============================================
# EMAIL SETTINGS (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=noreply@fraudlens.com

# ============================================
# MONITORING SETTINGS
# ============================================
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000

# ============================================
# LOGGING SETTINGS
# ============================================
LOG_FILE_PATH=/app/logs/fraudlens.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# ============================================
# CACHE SETTINGS
# ============================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1000
CACHE_EVICTION_POLICY=lru

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_EMAIL_SCANNING=true
ENABLE_VIDEO_ANALYSIS=true
ENABLE_DOCUMENT_VALIDATION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_MONITORING=true

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=fraudlens
BUILD_DATE=
VCS_REF=

# ============================================
# KUBERNETES SETTINGS (if using K8s)
# ============================================
K8S_NAMESPACE=fraudlens
K8S_CLUSTER=production
INGRESS_HOST=fraudlens.example.com