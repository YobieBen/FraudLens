# FraudLens Production Environment Configuration
# IMPORTANT: Keep this file secure and never commit to version control

# ============================================
# APPLICATION SETTINGS
# ============================================
FRAUDLENS_ENV=production
FRAUDLENS_DEBUG=false
FRAUDLENS_LOG_LEVEL=WARNING
FRAUDLENS_MAX_MEMORY_GB=16
VERSION=1.0.0

# ============================================
# SECURITY SETTINGS
# ============================================
# CHANGE THESE IN PRODUCTION!
SECRET_KEY=production-secret-key-change-this-immediately
JWT_SECRET_KEY=production-jwt-key-change-this-immediately
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================
# DATABASE SETTINGS
# ============================================
POSTGRES_HOST=fraudlens-postgres
POSTGRES_PORT=5432
POSTGRES_DB=fraudlens_prod
POSTGRES_USER=fraudlens_prod
POSTGRES_PASSWORD=change-this-secure-password
DATABASE_URL=postgresql://fraudlens_prod:change-this-secure-password@fraudlens-postgres:5432/fraudlens_prod

# ============================================
# REDIS SETTINGS
# ============================================
REDIS_HOST=fraudlens-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:change-this-redis-password@fraudlens-redis:6379/0

# ============================================
# API SETTINGS
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=8
API_RATE_LIMIT=5000
API_CORS_ORIGINS=["https://fraudlens.example.com"]
MAX_UPLOAD_SIZE_MB=500

# ============================================
# WORKER SETTINGS
# ============================================
WORKER_CONCURRENCY=8
WORKER_MAX_TASKS_PER_CHILD=200
WORKER_REPLICAS=4

# ============================================
# MODEL SETTINGS
# ============================================
MODEL_PATH=/app/models
USE_GPU=true
MODEL_CACHE_SIZE_GB=8

# ============================================
# MONITORING SETTINGS
# ============================================
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-grafana-password
GRAFANA_ROOT_URL=https://monitoring.fraudlens.example.com

# ============================================
# LOGGING SETTINGS
# ============================================
LOG_FILE_PATH=/app/logs/fraudlens.log
LOG_MAX_SIZE_MB=500
LOG_BACKUP_COUNT=10
LOG_FORMAT=json

# ============================================
# CACHE SETTINGS
# ============================================
CACHE_TTL_SECONDS=7200
CACHE_MAX_SIZE_MB=4000
CACHE_EVICTION_POLICY=lru

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_EMAIL_SCANNING=true
ENABLE_VIDEO_ANALYSIS=true
ENABLE_DOCUMENT_VALIDATION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_MONITORING=true

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_NAME=fraudlens
INGRESS_HOST=fraudlens.example.com